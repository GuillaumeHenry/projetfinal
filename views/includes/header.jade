nav.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Réseau social
    #navbar.navbar-collapse.collapse
      ul.nav.navbar-nav
        li(class=(title == 'Home') ? 'active' : null)
          a(href='/') Accueil
        li(class=(title == 'Contact') ? 'active' : null)
          a(href='/contact') Contact
        if user
          li(class=(title == 'Amis') ? 'active' : null)
            a(href='/amis') Amis
      ul.nav.navbar-nav.navbar-right
        if user
          li.dropdown
            a.navbar-avatar.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.photo
                img(src='/uploads/' + user.photo)
              else
              | <span> #{user.pseudo || user.name || user.email || user.id} </span>
              i.caret
            ul.dropdown-menu
              li
                a(href='/account') Mon profil
              li.divider
              li
                a(href='/logout') Se déconnecter
        else
          li(class=(title == 'Log in') ? 'active' : null)
            a(href='/login') Connexion
          li(class=(title == 'Sign up') ? 'active' : null)
            a(href='/signup') Inscription
