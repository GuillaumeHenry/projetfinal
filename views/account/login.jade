extends ../layout

block content
  .login-container.container
    .panel
      .panel-body
        if messages.error
          .alert.alert-danger(role='alert')
            for error in messages.error
              div= error.msg

        form(method='POST')
          legend Connexion
          .form-group
            label.control-label(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
          .form-group
            label.control-label(for='password') Mot de passe
            input.form-control(type='password', name='password', id='password', placeholder='Mot de passe')
          .form-group
            a(href='/forgot')
              strong Mot de passe oubli√© ?
          button.btn.btn-success(type='submit') Connexion

        .hr-title
          span ou

        .btn-toolbar.text-center
          a.btn.btn-facebook(href='/auth/facebook') Se connecter avec Facebook
          a.btn.btn-twitter(href='/auth/twitter') Se connecter avec Twitter
          a.btn.btn-google(href='/auth/google') Se connecter avec Google

    p.text-center Pas encore inscrit?&nbsp;
      a(href='/signup')
        strong Inscrivez-vous
